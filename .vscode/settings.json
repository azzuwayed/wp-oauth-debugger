    "intelephense.environment.includePaths": [
        "/Users/azzuwayed/Local Sites/oauth/app/public/wp-includes",
        "/Users/azzuwayed/Local Sites/oauth/app/public/wp-admin/includes",
        "${workspaceFolder}/vendor"
    ],
    "intelephense.diagnostics.undefinedFunctions": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedProperties": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.format.braces": "k&r",
    "intelephense.format.enable": true,
    "intelephense.completion.insertUseDeclaration": true,
    "intelephense.trace.server": "messages",

    // Editor Settings
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [80, 120],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.wordWrap": "off",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },

    // File Associations
    "files.associations": {
        "*.php": "php",
        "*.phtml": "php",
        "*.inc": "php",
        "*.module": "php",
        "*.install": "php",
        "*.test": "php",
        "*.theme": "php",
        "*.engine": "php",
        "*.profile": "php",
        "*.info": "php",
        "*.twig": "twig",
        "composer.json": "jsonc",
        "composer.lock": "jsonc"
    },

    // Search Settings
    "search.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/dist": true,
        "**/.git": true,
        "**/wp-content/uploads": true,
        "**/wp-content/cache": true,
        "**/wp-content/upgrade": true,
        "**/wp-content/backup-db": true,
        "**/wp-content/backups": true,
        "**/wp-content/debug.log": true,
        "**/vendor/**": true,
        "**/composer.lock": true
    },

    // Terminal Settings
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 14,

    // Debug Settings
    "debug.console.fontSize": 14,
    "debug.toolBarLocation": "docked",
    "debug.inlineValues": "on",

    // Workspace Settings
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.watcherExclude": {
        "**/vendor/**": true,
        "**/node_modules/**": true,
        "**/wp-content/uploads/**": true,
        "**/wp-content/cache/**": true,
        "**/composer.lock": true
    },

    // JSON Settings (for composer.json)
    "json.schemas": [
        {
            "fileMatch": ["composer.json"],
            "url": "https://getcomposer.org/schema.json"
        }
    ],
    "json.format.enable": true,
    "json.validate.enable": true,

    // File Explorer Settings
    "files.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/wp-content/uploads": false,
        "**/wp-content/cache": true,
        "**/wp-content/upgrade": true,
        "**/wp-content/backup-db": true,
        "**/wp-content/backups": true,
        "**/wp-content/debug.log": false,
        "**/composer.lock": true
    }
}

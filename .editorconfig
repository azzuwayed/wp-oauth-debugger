# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# PHP specific
[*.php]
indent_style = space
indent_size = 4

# WordPress templates
[*.phtml]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# JSON, YAML, TOML
[*.{json,yml,yaml,toml}]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 4

# JS, TS
[*.{js,jsx,ts,tsx}]
indent_size = 4

# HTML, XML
[*.{html,htm,xml}]
indent_size = 4

# Config files
[{package.json,.travis.yml,composer.json}]
indent_size = 2

# Minified files
[**.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore

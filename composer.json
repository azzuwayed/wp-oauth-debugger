{
    "name": "wp-oauth-debugger/wp-oauth-debugger",
    "version": "1.0.0",
    "description": "A WordPress plugin for debugging and monitoring OAuth implementations",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0",
        "monolog/monolog": "^2.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "WP_OAuth_Debugger\\": "includes/",
            "WP_OAuth_Debugger\\Admin\\": "includes/admin/",
            "WP_OAuth_Debugger\\Core\\": "includes/core/",
            "WP_OAuth_Debugger\\Debug\\": "includes/debug/",
            "WP_OAuth_Debugger\\Public\\": "src/Public/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WP_OAuth_Debugger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
} 
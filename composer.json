{
    "name": "azzuwayed/wp-oauth-debugger",
    "description": "A comprehensive debugging and monitoring tool for OAuth implementations in WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.3",
        "composer/installers": "^2.0",
        "yahnis-elsts/plugin-update-checker": "^5.0",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.0",
        "psr/log": "^3.0",
        "ext-json": ">=1.7.0",
        "ext-mbstring": ">=1.4.0",
        "ext-openssl": ">=1.1.0",
        "ext-pdo": ">=1.0.0",
        "ext-pdo_mysql": ">=1.0.0",
        "ext-curl": ">=7.0.0",
        "ext-hash": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpunit/php-code-coverage": "^10.0",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6",
        "symfony/var-dumper": "^6.0",
        "fakerphp/faker": "^1.23",
        "infection/infection": "^0.26",
        "phpbench/phpbench": "^1.2",
        "vimeo/psalm": "^5.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WP_OAuth_Debugger\\": "includes/"
        },
        "classmap": [
            "includes/Core/",
            "includes/Admin/",
            "includes/Debug/",
            "includes/Security/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WP_OAuth_Debugger\\Tests\\": "tests/",
            "WP_OAuth_Debugger\\Tests\\Fixtures\\": "tests/Fixtures/",
            "WP_OAuth_Debugger\\Tests\\Support\\": "tests/Support/"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        },
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": [
            "@php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html coverage",
            "@php -d xdebug.mode=coverage vendor/bin/phpcov merge coverage --html coverage-merged"
        ],
        "test:coverage:unit": "@php -d xdebug.mode=coverage vendor/bin/phpunit --testsuite Unit --coverage-html coverage/unit",
        "test:coverage:integration": "@php -d xdebug.mode=coverage vendor/bin/phpunit --testsuite Integration --coverage-html coverage/integration",
        "test:infection": "infection --min-msi=80 --min-covered-msi=90",
        "test:benchmark": "phpbench run --report=default",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress",
        "phpstan": "phpstan analyse --memory-limit=2G",
        "psalm": "psalm --no-progress",
        "lint": "parallel-lint . --exclude vendor",
        "build": "./build.sh",
        "update-deps": "./update-deps.sh",
        "fix-psr4": "./fix-psr4.sh",
        "post-install-cmd": [
            "@php -r \"file_exists('.gitignore') || file_put_contents('.gitignore', 'vendor/\\ncomposer.lock\\ncoverage/\\ncoverage-merged/\\n.phpunit.result.cache\\n.phpunit.cache/\\n.phpbench/\\ninfection.log\\nbuild/\\n.DS_Store\\n');\"",
            "@php -r \"file_exists('phpstan.neon') || copy('vendor/szepeviktor/phpstan-wordpress/extension.neon', 'phpstan.neon');\"",
            "@php -r \"file_exists('psalm.xml') || copy('vendor/vimeo/psalm/config.sample.xml', 'psalm.xml');\"",
            "@php -r \"file_exists('infection.json') || copy('vendor/infection/infection/resources/infection.json.dist', 'infection.json');\"",
            "@php -r \"file_exists('phpbench.json') || copy('vendor/phpbench/phpbench/phpbench.json.dist', 'phpbench.json');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.gitignore') || file_put_contents('.gitignore', 'vendor/\\ncomposer.lock\\ncoverage/\\ncoverage-merged/\\n.phpunit.result.cache\\n.phpunit.cache/\\n.phpbench/\\ninfection.log\\nbuild/\\n.DS_Store\\n');\"",
            "@php -r \"file_exists('phpstan.neon') || copy('vendor/szepeviktor/phpstan-wordpress/extension.neon', 'phpstan.neon');\"",
            "@php -r \"file_exists('psalm.xml') || copy('vendor/vimeo/psalm/config.sample.xml', 'psalm.xml');\"",
            "@php -r \"file_exists('infection.json') || copy('vendor/infection/infection/resources/infection.json.dist', 'infection.json');\"",
            "@php -r \"file_exists('phpbench.json') || copy('vendor/phpbench/phpbench/phpbench.json.dist', 'phpbench.json');\""
        ],
        "check": [
            "@lint",
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "check:ci": [
            "@lint",
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@test",
            "@test:infection"
        ],
        "setup-tests": "bash bin/install-wp-tests.sh wordpress_test root root 127.0.0.1 latest true"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/tests",
            "/.github",
            "/.git",
            "/.gitignore",
            "/.editorconfig",
            "/.phpcs.xml",
            "/phpstan.neon",
            "/psalm.xml",
            "/infection.json",
            "/phpbench.json",
            "/composer.json",
            "/composer.lock",
            "/README.md",
            "/CHANGELOG.md",
            "/docs",
            "/.vscode",
            "/.DS_Store",
            "/build",
            "/vendor",
            "/coverage",
            "/coverage-merged",
            "/.phpunit.cache",
            "/.phpbench",
            "/infection.log"
        ]
    }
}
